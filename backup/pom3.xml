<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.nosaku</groupId>
	<artifactId>rattle</artifactId>
	<version>1.0-SNAPSHOT</version>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>25</maven.compiler.source>
		<maven.compiler.target>25</maven.compiler.target>
		<javafx.version>25.0.1</javafx.version>
		<main.class>com.nosaku.rattle.App</main.class>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>${javafx.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-fxml</artifactId>
			<version>${javafx.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-web</artifactId>
			<version>${javafx.version}</version>
		</dependency>
		<!-- Add other JavaFX modules as needed, e.g., javafx-graphics,
		javafx-web, etc. -->

		<dependency>
			<groupId>org.fxmisc.richtext</groupId>
			<artifactId>richtextfx</artifactId>
			<version>0.11.7</version>
		</dependency>
		<dependency>
		    <groupId>com.fasterxml.jackson.core</groupId>
		    <artifactId>jackson-core</artifactId>
		    <version>2.20.1</version>
		</dependency>
		<dependency>
		    <groupId>io.github.iliareshetov</groupId>
		    <artifactId>rich-json-fx</artifactId>
		    <version>0.0.2</version>
		</dependency>		
		<dependency>
		  <groupId>org.controlsfx</groupId>
		  <artifactId>controlsfx</artifactId>
		  <version>11.2.2</version>
		</dependency>
		<!--<dependency>
		    <groupId>org.fxmisc.flowless</groupId>
		    <artifactId>flowless</artifactId>
		    <version>0.7.4</version>
		</dependency>-->
<!-- https://mvnrepository.com/artifact/org.reactfx/reactfx -->
<!--<dependency>
    <groupId>org.reactfx</groupId>
    <artifactId>reactfx</artifactId>
    <version>2.0-M6</version>
</dependency>-->		
</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.11.0</version>
				<configuration>
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
					<compilerArgs>
			            <arg>--add-exports</arg>
			            <arg>javafx.base/com.sun.javafx.event=ALL-UNNAMED</arg>
			        </compilerArgs>
				</configuration>
			</plugin>
			
			<plugin>
	            <groupId>org.apache.maven.plugins</groupId>
	            <artifactId>maven-shade-plugin</artifactId>
	            <version>3.5.1</version>
	            <executions>
	                <execution>
	                    <phase>package</phase>
	                    <goals>
	                        <goal>shade</goal>
	                    </goals>
	                    <configuration>
	                        <finalName>rattle</finalName>
	                        <transformers>
	                            <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
	                                <mainClass>com.nosaku.rattle.App</mainClass>
	                            </transformer>
	                        </transformers>
	                    </configuration>
	                </execution>
	            </executions>
	        </plugin>			
			<plugin>
	            <groupId>org.panteleyev</groupId>
	            <artifactId>jpackage-maven-plugin</artifactId>
	            <version>1.5.1</version>
	            <executions>
	                <execution>
	                    <goals>
	                        <goal>jpackage</goal>
	                    </goals>
	                </execution>
	            </executions>
	            <configuration>
	                <name>Rattle</name>
	                <appVersion>1.0.0</appVersion>
	                <mainJar>my-app.jar</mainJar>
	                <mainClass>com.example.myapp.MainApp</mainClass>
	                <!--<icon>path/to/your/icon.ico</icon>
	                <winShortcut>true</winShortcut>
	                <winMenu>true</winMenu>-->
	                <!-- Other platform-specific options can be added -->
	            </configuration>
	        </plugin>
		</plugins>
	</build>
</project>
