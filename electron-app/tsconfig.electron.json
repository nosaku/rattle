{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "electron/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src"
    ]
}