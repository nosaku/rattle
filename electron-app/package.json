{
    "name": "rattle-electron",
    "version": "1.0.0",
    "description": "Rattle API Testing Tool - Electron + Angular",
    "main": "dist/main.js",
    "scripts": {
        "ng:serve": "ng serve",
        "ng:build": "ng build",
        "ng:build:prod": "ng build --configuration production",
        "electron:build": "tsc -p tsconfig.electron.json",
        "electron:serve": "wait-on http://localhost:4200 && npm run electron:build && electron .",
        "start": "npm-run-all -p ng:serve electron:serve",
        "build": "npm run ng:build:prod && npm run electron:build",
        "package": "npm run build && electron-builder build",
        "package:all": "npm run build && electron-builder build -mwl"
    },
    "keywords": [
        "api",
        "testing",
        "rest",
        "electron",
        "angular"
    ],
    "author": "nosaku",
    "license": "MIT",
    "dependencies": {
        "@angular/animations": "^17.0.0",
        "@angular/common": "^17.0.0",
        "@angular/compiler": "^17.0.0",
        "@angular/core": "^17.0.0",
        "@angular/forms": "^17.0.0",
        "@angular/platform-browser": "^17.0.0",
        "@angular/platform-browser-dynamic": "^17.0.0",
        "@angular/router": "^17.0.0",
        "axios": "^1.6.0",
        "ngx-monaco-editor-v2": "^17.0.0",
        "rxjs": "^7.8.0",
        "tslib": "^2.6.0",
        "zone.js": "^0.14.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.0.0",
        "@angular/cli": "^17.0.0",
        "@angular/compiler-cli": "^17.0.0",
        "@types/node": "^20.10.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.0",
        "npm-run-all": "^4.1.5",
        "typescript": "~5.2.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.nosaku.rattle",
        "productName": "Rattle",
        "files": [
            "dist/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "output": "release"
        },
        "mac": {
            "target": "dmg",
            "icon": "build/icon.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "icon": "build/icon.png"
        }
    }
}