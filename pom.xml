<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.nosaku</groupId>
	<artifactId>rattle</artifactId>
	<version>1.0-SNAPSHOT</version>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>21</maven.compiler.source>
		<maven.compiler.target>21</maven.compiler.target>
		<javafx.version>21.0.9</javafx.version>
		<main.class>com.nosaku.rattle.App</main.class>
	</properties>

	<dependencies>
		<!-- JavaFX Base (REQUIRED - contains core utilities like Callback) -->
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-base</artifactId>
			<version>${javafx.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-base</artifactId>
			<version>${javafx.version}</version>
			<classifier>win</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-base</artifactId>
			<version>${javafx.version}</version>
			<classifier>linux</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-base</artifactId>
			<version>${javafx.version}</version>
			<classifier>mac</classifier>
		</dependency>

		<!-- JavaFX Graphics (REQUIRED - contains native graphics drivers) -->
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-graphics</artifactId>
			<version>${javafx.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-graphics</artifactId>
			<version>${javafx.version}</version>
			<classifier>win</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-graphics</artifactId>
			<version>${javafx.version}</version>
			<classifier>linux</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-graphics</artifactId>
			<version>${javafx.version}</version>
			<classifier>mac</classifier>
		</dependency>

		<!-- JavaFX Controls -->
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>${javafx.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>${javafx.version}</version>
			<classifier>win</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>${javafx.version}</version>
			<classifier>linux</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>${javafx.version}</version>
			<classifier>mac</classifier>
		</dependency>

		<!-- JavaFX FXML -->
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-fxml</artifactId>
			<version>${javafx.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-fxml</artifactId>
			<version>${javafx.version}</version>
			<classifier>win</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-fxml</artifactId>
			<version>${javafx.version}</version>
			<classifier>linux</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-fxml</artifactId>
			<version>${javafx.version}</version>
			<classifier>mac</classifier>
		</dependency>

		<!-- JavaFX Web -->
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-web</artifactId>
			<version>${javafx.version}</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-web</artifactId>
			<version>${javafx.version}</version>
			<classifier>win</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-web</artifactId>
			<version>${javafx.version}</version>
			<classifier>linux</classifier>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-web</artifactId>
			<version>${javafx.version}</version>
			<classifier>mac</classifier>
		</dependency>

		<dependency>
			<groupId>org.fxmisc.richtext</groupId>
			<artifactId>richtextfx</artifactId>
			<version>0.11.7</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-core</artifactId>
			<version>2.20.1</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.19.2</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-annotations</artifactId>
			<version>2.19.2</version>
		</dependency>
		<dependency>
		    <groupId>io.github.iliareshetov</groupId>
		    <artifactId>rich-json-fx</artifactId>
		    <version>0.0.2</version>
		</dependency>		
		<dependency>
		  <groupId>org.controlsfx</groupId>
		  <artifactId>controlsfx</artifactId>
		  <version>11.2.2</version>
		</dependency>
		<dependency>
		  <groupId>com.google.code.gson</groupId>
		  <artifactId>gson</artifactId>
		  <version>2.13.1</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.11.0</version>
				<configuration>
					<source>${maven.compiler.source}</source>
					<target>${maven.compiler.target}</target>
					<compilerArgs>
			            <arg>--add-exports</arg>
			            <arg>javafx.base/com.sun.javafx.event=ALL-UNNAMED</arg>
			        </compilerArgs>
				</configuration>
			</plugin>
			
			<plugin>
	            <groupId>org.apache.maven.plugins</groupId>
	            <artifactId>maven-shade-plugin</artifactId>
	            <version>3.5.1</version>
	            <executions>
	                <!-- Windows JAR -->
	                <execution>
	                    <id>windows</id>
	                    <phase>package</phase>
	                    <goals>
	                        <goal>shade</goal>
	                    </goals>
	                    <configuration>
	                        <outputDirectory>${project.basedir}/build</outputDirectory>
	                        <finalName>rattle-windows</finalName>
	                        <createDependencyReducedPom>false</createDependencyReducedPom>
	                        <transformers>
	                            <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
	                                <mainClass>com.nosaku.rattle.Launcher</mainClass>
	                            </transformer>
	                            <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
	                        </transformers>
	                        <filters>
	                            <filter>
	                                <artifact>*:*</artifact>
	                                <excludes>
	                                    <exclude>META-INF/*.SF</exclude>
	                                    <exclude>META-INF/*.DSA</exclude>
	                                    <exclude>META-INF/*.RSA</exclude>
	                                </excludes>
	                            </filter>
	                            <!-- Exclude Linux and Mac native libraries -->
	                            <filter>
	                                <artifact>org.openjfx:*</artifact>
	                                <excludes>
	                                    <exclude>**/*-linux.jar</exclude>
	                                    <exclude>**/*-mac.jar</exclude>
	                                </excludes>
	                            </filter>
	                        </filters>
	                        <artifactSet>
	                            <excludes>
	                                <exclude>org.openjfx:*:*:linux</exclude>
	                                <exclude>org.openjfx:*:*:mac</exclude>
	                            </excludes>
	                        </artifactSet>
	                    </configuration>
	                </execution>
	                
	                <!-- Linux JAR -->
	                <execution>
	                    <id>linux</id>
	                    <phase>package</phase>
	                    <goals>
	                        <goal>shade</goal>
	                    </goals>
	                    <configuration>
	                        <outputDirectory>${project.basedir}/build</outputDirectory>
	                        <finalName>rattle-linux</finalName>
	                        <createDependencyReducedPom>false</createDependencyReducedPom>
	                        <transformers>
	                            <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
	                                <mainClass>com.nosaku.rattle.Launcher</mainClass>
	                            </transformer>
	                            <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
	                        </transformers>
	                        <filters>
	                            <filter>
	                                <artifact>*:*</artifact>
	                                <excludes>
	                                    <exclude>META-INF/*.SF</exclude>
	                                    <exclude>META-INF/*.DSA</exclude>
	                                    <exclude>META-INF/*.RSA</exclude>
	                                </excludes>
	                            </filter>
	                            <!-- Exclude Windows and Mac native libraries -->
	                            <filter>
	                                <artifact>org.openjfx:*</artifact>
	                                <excludes>
	                                    <exclude>**/*-win.jar</exclude>
	                                    <exclude>**/*-mac.jar</exclude>
	                                </excludes>
	                            </filter>
	                        </filters>
	                        <artifactSet>
	                            <excludes>
	                                <exclude>org.openjfx:*:*:win</exclude>
	                                <exclude>org.openjfx:*:*:mac</exclude>
	                            </excludes>
	                        </artifactSet>
	                    </configuration>
	                </execution>
	                
	                <!-- macOS JAR -->
	                <execution>
	                    <id>mac</id>
	                    <phase>package</phase>
	                    <goals>
	                        <goal>shade</goal>
	                    </goals>
	                    <configuration>
	                        <outputDirectory>${project.basedir}/build</outputDirectory>
	                        <finalName>rattle-mac</finalName>
	                        <createDependencyReducedPom>false</createDependencyReducedPom>
	                        <transformers>
	                            <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
	                                <mainClass>com.nosaku.rattle.Launcher</mainClass>
	                            </transformer>
	                            <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
	                        </transformers>
	                        <filters>
	                            <filter>
	                                <artifact>*:*</artifact>
	                                <excludes>
	                                    <exclude>META-INF/*.SF</exclude>
	                                    <exclude>META-INF/*.DSA</exclude>
	                                    <exclude>META-INF/*.RSA</exclude>
	                                </excludes>
	                            </filter>
	                            <!-- Exclude Windows and Linux native libraries -->
	                            <filter>
	                                <artifact>org.openjfx:*</artifact>
	                                <excludes>
	                                    <exclude>**/*-win.jar</exclude>
	                                    <exclude>**/*-linux.jar</exclude>
	                                </excludes>
	                            </filter>
	                        </filters>
	                        <artifactSet>
	                            <excludes>
	                                <exclude>org.openjfx:*:*:win</exclude>
	                                <exclude>org.openjfx:*:*:linux</exclude>
	                            </excludes>
	                        </artifactSet>
	                    </configuration>
	                </execution>
	            </executions>
	        </plugin>			
			<plugin>
	            <groupId>org.panteleyev</groupId>
	            <artifactId>jpackage-maven-plugin</artifactId>
	            <version>1.5.1</version>
	            <executions>
	                <execution>
	                    <goals>
	                        <goal>jpackage</goal>
	                    </goals>
	                </execution>
	            </executions>
	            <configuration>
	                <name>Rattle</name>
	                <appVersion>1.0.0</appVersion>
	                <mainJar>my-app.jar</mainJar>
	                <mainClass>com.example.myapp.MainApp</mainClass>
	                <!--<icon>path/to/your/icon.ico</icon>
	                <winShortcut>true</winShortcut>
	                <winMenu>true</winMenu>-->
	                <!-- Other platform-specific options can be added -->
	            </configuration>
	        </plugin>
		</plugins>
	</build>

   <profiles>
        <profile>
            <id>native</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.graalvm.buildtools</groupId>
                        <artifactId>native-maven-plugin</artifactId>
                        <version>0.10.5</version>
                        <extensions>true</extensions>
                        <executions>
                            <execution>
                                <id>build-native</id>
                                <goals>
                                    <goal>compile-no-fork</goal>
                                </goals>
                                <phase>package</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <imageName>rattle</imageName>
                            <mainClass>com.nosaku.rattle.Launcher</mainClass>
                            <buildArgs>
                                <buildArg>--verbose</buildArg>
                                <buildArg>--no-fallback</buildArg>
                                <buildArg>-march=compatibility</buildArg>
                                <buildArg>-H:IncludeResources=.*\.css$</buildArg>
                                <buildArg>-H:IncludeResources=.*\.png$</buildArg>
                            </buildArgs>
                            <outputDirectory>${project.build.directory}/native</outputDirectory>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
